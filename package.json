{
  "name": "odrive",
  "version": "0.2.2",
  "description": "Simple google drive client",
  "main": "main.js",
  "repository": "https://github.com/liberodark/ODrive.git",
  "author": "coyotte508 <coyotte508@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "array-unique": "^0.3.2",
    "auto-launch": "^5.0.5",
    "body-parser": "^1.18.2",
    "bootstrap": "4.3.1",
    "chokidar": "^2.0.4",
    "command-line-args": "^5.0.2",
    "deep-equal": "^1.0.1",
    "delay": "^3.1.0",
    "ejs": "^2.5.7",
    "express": "^4.16.1",
    "file-loader": "^2.0.0",
    "font-awesome": "^4.7.0",
    "fs-extra": "^7.0.0",
    "googleapis": "^22.2.0",
    "jquery": "^3.2.1",
    "md5-file": "^4.0.0",
    "mkdirp-promise": "^5.0.1",
    "morgan": "^1.9.0",
    "nedb-promise": "^2.0.1",
    "node-notifier": "^5.1.2",
    "popper.js": "^1.14.4",
    "sass-loader": "^6.0.6",
    "tether": "^1.4.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.7",
    "electron": "^4.1.0",
    "electron-builder": "^20.11.1",
    "electron-packager": "^13.1.0",
    "eslint": "^5.4.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "node-sass": "^4.9.3",
    "resolve-url-loader": "^2.1.0",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0"
  },
  "scripts": {
    "lint": "eslint app main.js",
    "test": "npm run lint",
    "start": "electron main",
    "webpack": "webpack",
    "postinstall": "npm run webpack && electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release-linux": "electron-builder --linux",
    "release-windows": "electron-builder --windows",
    "release-mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.electron.odrive",
    "productName": "OpenDrive",
    "files": [
      "!dist",
      "!release-builds"
    ],
    "linux": {
      "category": "Archiving",
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "snap": {
      "grade": "stable",
      "confinement": "classic",
      "summary": "This is a Linux GUI client for Google Drive."
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}
